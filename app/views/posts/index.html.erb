
<h1>Books</h1>
<table>

<tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
</tr>



<% @posts.each do |post| %>
    
    <tr>
        <td>
            <%= post.title %>
        </td>
    
        <td>
           <%= post.body %>
        </td>

        <td><%= link_to "show", post_path(post.id), class: "show_#{@post.id}" %></td>
        <td><%= link_to "edit",edit_post_path(post.id), class: "edit_#{@post.id}" %></td>
        <td><%= link_to "Destroy", post_path(post.id),method: :delete, data: {confirm: "Are you sure?"}, class: "destroy_#{@post.id}" %></td>
        
    </tr>
    
<% end %>
</table>


<h1>new book</h1>
<%= form_for @post do |f| %>

<h4>title</h4>
<%= f.text_field :title, class: "book_title" %>

<h4>body</h4>
<%= f.text_area :body, class: "book_body" %>
<%= f.submit 'create book' %>
<% end %>